<UserControl x:Class="Luminous.TimeSavers.UI.BrowserWindow.BrowserWindowToolWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

    xmlns:local="clr-namespace:Luminous.TimeSavers.UI.BrowserWindow"
    xmlns:syncfusion="clr-namespace:Syncfusion.Windows.Tools.Controls;assembly=Syncfusion.Tools.Wpf"

    Background="{DynamicResource ToolWindowBackgroundBrushKey}"
    Foreground="{DynamicResource ToolWindowTextBrushKey}"

    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300"
    x:Name="BrowserControlToolWindow">

    <UserControl.DataContext>
        <local:BrowserWindowViewModel />
    </UserControl.DataContext>

    <!--<Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
    </Grid>-->

    <StackPanel x:Name="BrowserWindowControl">
        <syncfusion:AutoComplete x:Name="BrowserWindowUrl"
            Source="Custom" CustomSource="{Binding Urls}"
            >
        </syncfusion:AutoComplete>
    </StackPanel>
</UserControl>